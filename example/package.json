{
	"devDependencies": {
		"prettier": "^3.2.5",
		"prettier-plugin-solidity": "^1.3.1"
	},
	"scripts": {
		"codegen": "pnpm run archetype:codegen && pnpm run game:abigen",
		"archetype:codegen": "archetype codegen",
		"game:abigen": "abigen --bin ./out/Game.sol/Game.bin --abi ./out/Game.sol/Game.abi.json --pkg contract --out ./gogen/abigen/game/game.go",
		"game:run": "go run cmd/main.go",
		"game:build:web": "env GOOS=js GOARCH=wasm go build -trimpath -o ./web/play.wasm ./web/play.go",
		"engine:build:docker": "docker build -t ghcr.io/concrete-eth/archetype/example:latest .."
	}
}